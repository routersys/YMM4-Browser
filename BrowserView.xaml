<UserControl x:Class="YMM4Browser.View.BrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:vm="clr-namespace:YMM4Browser.ViewModel"
             x:Name="root">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="IconPathStyle" TargetType="Path">
            <Setter Property="Fill" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="NavButtonStyle">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ToggleButton" x:Key="IconToggleButtonStyle">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,0,0,1">
            <DockPanel Margin="4,2" Height="32">

                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding GoBackCommand}"
                            ToolTip="戻る"
                            IsEnabled="{Binding CanGoBack}">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding GoForwardCommand}"
                            ToolTip="進む"
                            IsEnabled="{Binding CanGoForward}">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"/>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding RefreshCommand}"
                            ToolTip="更新">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding HomeCommand}"
                            ToolTip="ホーム">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z"/>
                    </Button>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding TakeScreenshotCommand}"
                            ToolTip="スクリーンショット">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M4,4H7L9,2H15L17,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M12,7A5,5 0 0,0 7,12A5,5 0 0,0 12,17A5,5 0 0,0 17,12A5,5 0 0,0 12,7M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9Z"/>
                    </Button>

                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding AddBookmarkCommand}"
                            ToolTip="ブックマークに追加">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M17,3H7A2,2 0 0,0 5,5V21L12,18L19,21V5C19,3.89 18.1,3 17,3Z"/>
                    </Button>

                    <ToggleButton x:Name="BookmarkToggle"
                                  Style="{StaticResource IconToggleButtonStyle}"
                                  ToolTip="ブックマーク">
                        <Path Style="{StaticResource IconPathStyle}"
                              Data="M16,4V16L12,14L8,16V4H16M16,2H8A2,2 0 0,0 6,4V20L12,17L18,20V4A2,2 0 0,0 16,2Z"/>
                    </ToggleButton>
                </StackPanel>

                <Border DockPanel.Dock="Top"
                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="4,0">
                    <TextBox Text="{Binding AddressBarUrl, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Padding="6,4"
                             Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding NavigateCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Border>

            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,0,0,1"
                Visibility="{Binding IsChecked, ElementName=BookmarkToggle, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Height="28"
                          Background="Transparent">
                <ItemsControl ItemsSource="{Binding Bookmarks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="1" Background="Transparent">
                                <Button Content="{Binding Name}"
                                        Command="{Binding DataContext.NavigateToBookmarkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        MaxWidth="120"
                                        Height="26"
                                        Padding="6,2"
                                        ToolTip="{Binding Url}"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="削除"
                                                      Command="{Binding Path=DataContext.RemoveBookmarkCommand, ElementName=root}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2">
            <ProgressBar Height="2"
                         VerticalAlignment="Top"
                         IsIndeterminate="True"
                         Visibility="{Binding IsNavigating, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <wv2:WebView2 x:Name="webView"/>
        </Grid>

    </Grid>
</UserControl>