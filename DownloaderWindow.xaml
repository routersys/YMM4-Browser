<Window x:Class="YMM4Browser.View.DownloaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YMM4Browser.View"
        mc:Ignorable="d"
        Title="ダウンロードマネージャー" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" MinHeight="550" MinWidth="700"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="24"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Margin="10" Background="Transparent" BorderThickness="0">
            <TabItem Header="画像一括ダウンロード">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Content="現在のページの画像URLを読み込む" 
                            Command="{Binding LoadImageUrlsCommand}"
                            IsEnabled="{Binding !IsBusy}"
                            HorizontalAlignment="Left" Margin="0,5,0,10" Padding="10,5" Height="28"/>

                    <DockPanel Grid.Row="1" Margin="0,0,0,10">
                        <Button DockPanel.Dock="Right" Content="..." Command="{Binding SelectImageSavePathCommand}" Margin="5,0,0,0" Width="30" Height="24"/>
                        <Label DockPanel.Dock="Left" Content="保存先フォルダ:"/>
                        <TextBox Text="{Binding ImageSavePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

                    <Border Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1">
                        <ListView ItemsSource="{Binding ImageItems}" Background="Transparent" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="60">
                                        <GridViewColumn.Header>
                                            <CheckBox IsChecked="{Binding DataContext.SelectAllImages, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="画像プレビュー" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding Url}" Height="80" Width="120" Stretch="Uniform"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="URL" Width="450">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Url}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                                           Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>

                    <Button Grid.Row="3" Content="選択した画像をダウンロード"
                            Command="{Binding DownloadImagesCommand}"
                            IsEnabled="{Binding !IsBusy}"
                            HorizontalAlignment="Right" Margin="0,10,0,0" Padding="10,5" Height="28"/>
                </Grid>
            </TabItem>
            <TabItem Header="動画ダウンロード (yt-dlp)">
                <StackPanel Margin="5">
                    <Label Content="動画ページのURL:" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding VideoUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <Label Content="保存先フォルダ:" Margin="0,5,0,2"/>
                    <DockPanel Margin="0,0,0,15">
                        <Button DockPanel.Dock="Right" Content="..." Command="{Binding SelectVideoSavePathCommand}" Margin="5,0,0,0" Width="30" Height="24"/>
                        <TextBox Text="{Binding VideoSavePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

                    <GroupBox Header="ダウンロード設定" Padding="10" 
                              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="形式:" Margin="0,0,5,10"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Formats}" SelectedItem="{Binding SelectedFormat}" Margin="0,0,20,10"/>

                            <Label Grid.Row="0" Grid.Column="2" Content="解像度:" Margin="0,0,5,10" IsEnabled="{Binding !IsAudioOnly}"/>
                            <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding Resolutions}" SelectedItem="{Binding SelectedResolution}" Margin="0,0,0,10" IsEnabled="{Binding !IsAudioOnly}"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="フレームレート:" Margin="0,0,5,10" IsEnabled="{Binding !IsAudioOnly}"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Framerates}" SelectedItem="{Binding SelectedFramerate}" Margin="0,0,20,10" IsEnabled="{Binding !IsAudioOnly}"/>

                            <Label Grid.Row="1" Grid.Column="2" Content="音声品質:" Margin="0,0,5,10" IsEnabled="{Binding IsAudioOnly}"/>
                            <ComboBox Grid.Row="1" Grid.Column="3" ItemsSource="{Binding AudioQualities}" SelectedItem="{Binding SelectedAudioQuality}" Margin="0,0,0,10" IsEnabled="{Binding IsAudioOnly}"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="追加オプション:" Margin="0,5,5,10"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,5,0,10">
                                <CheckBox Content="字幕を埋め込む" IsChecked="{Binding EmbedSubtitles}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <CheckBox Content="サムネイルを埋め込む" IsChecked="{Binding EmbedThumbnail}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Label Grid.Row="3" Grid.Column="0" Content="カスタム引数:" Margin="0,0,5,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding CustomArguments, UpdateSourceTrigger=PropertyChanged}" 
                                     FontFamily="Consolas" ToolTip="yt-dlpのコマンドライン引数を直接入力します。"/>
                        </Grid>
                    </GroupBox>

                    <Button Content="ダウンロード開始" 
                            Command="{Binding DownloadVideoCommand}"
                            IsEnabled="{Binding !IsBusy}" Padding="10,5" Height="28"
                            HorizontalAlignment="Right" Margin="0,20,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" Margin="5,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar IsIndeterminate="{Binding IsBusy}" Width="100" Height="10" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>