<Window x:Class="YMM4Browser.View.GenericDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YMM4Browser.View"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="500" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Message}" Margin="20" TextWrapping="Wrap"/>

        <Border Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="はい" Command="{Binding YesCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Visibility="{Binding ShowYesButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsDefault="True" Width="80" Margin="5,0"/>
                <Button Content="いいえ" Command="{Binding NoCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Visibility="{Binding ShowNoButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsCancel="True" Width="80" Margin="5,0"/>
                <Button Content="OK" Command="{Binding OkCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Visibility="{Binding ShowOkButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsDefault="True" Width="80" Margin="5,0"/>
                <Button Content="キャンセル" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Visibility="{Binding ShowCancelButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsCancel="True" Width="80" Margin="5,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>